# Production Environment Variables for CipherStudio Backend

# Server Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb+srv://cipherstudio:Abhi_shukla_0777@cluster0.3r3khsw.mongodb.net/cipherstudio?retryWrites=true&w=majority
MONGODB_DB_NAME=cipherstudio-prod

# AWS S3 Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET_NAME=cipherstudio-files-dev1
S3_BUCKET_REGION=ap-south-1

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-super-secure-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://cipherstudio.com,https://www.cipherstudio.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_REQUEST_LOGGING=true

# Error Reporting
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ENABLE_ERROR_REPORTING=true

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# Health Check
HEALTH_CHECK_ENDPOINT=/health
ENABLE_HEALTH_CHECK=true

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_PROJECT=1000

# Cache Configuration
REDIS_URL=redis://localhost:6379
ENABLE_REDIS_CACHE=false
CACHE_TTL=3600

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@cipherstudio.com

# Backup Configuration
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30