# Example Environment Variables for CipherStudio Backend
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/cipherstudio-dev
MONGODB_DB_NAME=cipherstudio-dev

# AWS S3 Configuration (Optional for development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET_NAME=cipherstudio-files-dev
S3_BUCKET_REGION=us-east-1

# Security
JWT_SECRET=your-jwt-secret-for-development
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev
ENABLE_REQUEST_LOGGING=true

# Error Reporting
SENTRY_DSN=
ENABLE_ERROR_REPORTING=false

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=false
PERFORMANCE_SAMPLE_RATE=1.0

# Health Check
HEALTH_CHECK_ENDPOINT=/health
ENABLE_HEALTH_CHECK=true

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_PROJECT=1000

# Cache Configuration
REDIS_URL=redis://localhost:6379
ENABLE_REDIS_CACHE=false
CACHE_TTL=3600

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=

# Backup Configuration
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=7